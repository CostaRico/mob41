<% if current_order.line_items.empty? %>
	$(".cart-in-header").empty().append("<%= j(render partial: '/spree/shared/cart', :locals => {:order => current_order}) %>")
<% else %>
	$(".navbar-mini-cart .cart-items-count").text("<%= j(current_order.nil? ? 0 : order_count(current_order.item_count)) %>");
	$(".navbar-mini-cart .cart-items-total-price .amount").text("<%= j(current_order.nil? ? 0 : display_hum_price(current_order.total)) %> Руб.");
<% end %>		 