<% address_id = address_type.chars.first %>
  <p  class="form-row form-row form-row-first validate-required" id=<%="#{address_id}firstname" %>>
    <%= form.label :firstname do %>
      <%= Spree.t(:first_name) %><abbr title="required" class="required">*</abbr>
    <% end %>
    <%= form.text_field :firstname, class: 'input-text required' %>
  </p>
  <p id=<%="#{address_id}lastname" %> class="form-row form-row form-row-last validate-required">
    <%= form.label :lastname do %>
      <%= Spree.t(:last_name) %><abbr class="required" title="required">*</abbr>
    <% end %>
    <%= form.text_field :lastname, class: 'input-text required' %>
  </p>
  <% if Spree::Config[:company] %>
    <p id=<%="#{address_id}company" %> class="form-row form-row form-row-wide">
        <%= form.label :company, Spree.t(:company) %>
        <%= form.text_field :company, class: 'input-text' %>
    </p>
  <% end %> 
  <p id=<%="#{address_id}address1" %> class="form-row form-row form-row-wide address-field validate-required">
    <%= form.label :address1 do %>
      <%= Spree.t(:street_address) %><abbr class="required" title="required">*</abbr>
    <% end %>
    <%= form.text_field :address1, class: 'input-text  required' %>
  </p>
  <p id=<%="#{address_id}address2" %> class="form-row form-row form-row-wide address-field">
    <%= form.label :address2, Spree.t(:street_address_2) %>
    <%= form.text_field :address2, class: 'input-text' %>
  </p>
  <p id=<%="#{address_id}city"%> class="form-row form-row form-row-wide validate-required validate-email">
    <%= form.label :city do %>
      <%= Spree.t(:city) %><abbr class="required" title="required">*</abbr>
    <% end %>
    <%= form.text_field :city, class: 'input-text required' %>
  </p>
  <p class="form-row form-row form-row-wide address-field validate-required" id=<%="#{address_id}country" %>>
    <%= form.label :country_id do %>
      <%= Spree.t(:country) %><abbr class="required" title="required">*</abbr>
    <% end %>
    <span id=<%="#{address_id}country-selection" %> >
      <%= form.collection_select :country_id, available_countries, :id, :name, {}, {class: 'input-text required'} %>
    </span>
  </p>

  <% if Spree::Config[:address_requires_state] %>
    <p class="form-row form-row form-row-wide address-field validate-required" id=<%="#{address_id}state" %>>
      <% have_states = !address.country.states.empty? %>
      <%= form.label :state do %>
        <%= Spree.t(:state) %><abbr class='required' title="required" id=<%="#{address_id}state-required"%>>*</abbr>
      <% end %>

      <%== state_elements = [
         form.collection_select(:state_id, address.country.states,
                            :id, :name,
                            {include_blank: true},
                            {class: have_states ? 'input-text required' : 'input-text hidden',
                            disabled: !have_states}) +
         form.text_field(:state_name,
                            class: !have_states ? 'input-text required' : 'input-text hidden',
                            disabled: have_states)
         ].join.gsub('"', "'").gsub("\n", "")
      %>
    </p>
      <noscript>
        <%= form.text_field :state_name, class: 'input-text required' %>
      </noscript>
  <% end %>

  <p class="form-row form-row form-row-first validate-required validate-email" id=<%="#{address_id}zipcode" %>>
    <%= form.label :zipcode do %>
      <%= Spree.t(:zip) %><% if address.require_zipcode? %><abbr class="required" title="required">*</abbr><% end %>
    <% end %>
    <%= form.text_field :zipcode, class: "input-text #{'required' if address.require_zipcode?}" %>
  </p>
  <p class="form-row form-row form-row-last validate-required validate-email" id=<%="#{address_id}phone" %>>
    <%= form.label :phone do %>
      <%= Spree.t(:phone) %><% if address.require_phone? %><abbr class="required" title="required">*</abbr><% end %>
    <% end %>
    <%= form.phone_field :phone, class: "input-text #{'required' if address.require_phone?}" %>
  </p>
  <% if Spree::Config[:alternative_shipping_phone] %>
    <p class="form-row form-row  form-row-wide validate-required validate-email" id=<%="#{address_id}altphone" %>>
      <%= form.label :alternative_phone, Spree.t(:alternative_phone) %>
      <%= form.phone_field :alternative_phone, class: 'input-text' %>
    </p>
  <% end %>
</div>